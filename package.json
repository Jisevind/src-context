{
  "name": "src-context",
  "version": "0.1.0",
  "description": "A CLI tool for processing and analyzing code context",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "src-context": "dist/cli.js"
  },
  "scripts": {
