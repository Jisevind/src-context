{
  "name": "src-context",
  "version": "0.2.1",
  "description": "A CLI tool for processing and analyzing code context",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "src-context": "dist/cli.js"
  },
  "scripts": {
    "build": "node ./node_modules/typescript/bin/tsc",
    "start": "npm run build && node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "test": "npm run build && vitest run",
    "test:watch": "npm run build && vitest",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "keywords": [
    "cli",
    "context",
    "code-analysis",
    "typescript"
  ],
  "author": "Johan Isevind",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jisevind/src-context.git"
  },
  "dependencies": {
    "@npmcli/installed-package-contents": "^4.0.0",
    "abbrev": "^4.0.0",
    "chokidar": "^5.0.0",
    "clipboardy": "^5.0.0",
    "commander": "^14.0.2",
    "glob": "^13.0.5",
    "gpt-tokenizer": "^3.2.0",
    "ignore": "^7.0.5",
    "isbinaryfile": "^6.0.0",
    "nopt": "^9.0.0",
    "npm-bundled": "^5.0.0",
    "npm-normalize-package-bin": "^5.0.0",
    "strip-comments": "^2.0.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@types/node": "^25.2.3",
    "semantic-release": "^25.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  }
}